    "vimeo/psalm": "^5.26",
    "xenolope/quahog": "^3.0",
    "fakerphp/faker": "^1.23"
  },
  "autoload": {
    "psr-4": {
      "Zemit\\": "src/"
    },
    "files": [
      "src/Functions/Dump.php",
      "src/Functions/Array.php",
      "src/Functions/Sprintf.php",
      "src/Functions/Json.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Zemit\\Tests\\Unit\\": "tests/Unit"
    }
  },
  "archive": {
    "exclude": [
      "/.github",
      "/.phalcon",
      "/.phpunit.cache",
      "/tests",
      "CHANGELOG.md",
      "codeception.yml",
      "phpcs.xml",
      "phpcs.xml.dist",
      "phpstan.neon",
      "phpstan.neon.dist",
      "phpunit.xml",
      "phpunit.xml.dist",
      "psalm.xml",
      "psalm.xml.dist"
    ]
  },
  "bin": [
    "zemit"
  ],
  "scripts": {
    "docker": "docker-compose up",
    "skeleton": "./bin/skeleton.sh validate ./",
    "phpunit": "./bin/phpunit.sh",
    "psalm": "./bin/psalm.sh",
    "php-cs-fixer": "./bin/php-cs-fixer.sh",
    "phpcs": "./bin/phpcs.sh",
    "phpcbf": "./bin/phpcbf.sh",
    "docs": "phpDocumentor -c phpdoc.xml"
  }
