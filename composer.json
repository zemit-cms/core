    "league/flysystem": "^3.29.1",
    "league/fractal": "^0.20.2",
    "phalcon/devtools": "~5.0",
    "phalcon/incubator-mailer": "^2.0",
    "vlucas/phpdotenv": "^5.6.1"
  },
  "suggest": {
    "ext-zend-opcache": "*",
