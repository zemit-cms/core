{
  "name": "zemit-cms/core",
  "type": "library",
  "description": "Zemit CMS Core",
  "keywords": [
    "framework",
    "phalcon",
    "cms",
    "core",
    "zemit",
    "zemit-cms",
    "zemit cms",
    "zemit cms core"
  ],
  "homepage": "https://www.zemit.com",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Zemit Team",
      "email": "contact@zemit.com",
      "homepage": "https://www.zemit.com/"
    },
    {
      "name": "Nuagerie Team",
      "email": "contact@nuagerie.com",
      "homepage": "https://www.nuagerie.com/"
    },
    {
      "name": "Julien Turbide",
      "email": "contact@jturbide.com",
      "homepage": "https://www.jturbide.com/"
    },
    {
      "name": "Contributors",
      "homepage": "https://github.com/zemit-cms/core/graphs/contributors"
    }
  ],
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/jturbide"
    }
  ],
  "support": {
    "issues": "https://github.com/zemit-cms/core/issues",
    "source": "https://github.com/zemit-cms/core"
  },
  "config": {
    "optimize-autoloader": true,
    "apcu-autoloader": true,
    "apcu-autoloader-prefix": "zemit-core-",
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "cweagans/composer-patches": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.4",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "ext-phalcon": ">=5.9.3",
    "ext-sodium": "*",
    "docopt/docopt": "^1.0.6",
    "league/flysystem": "^3.30.1",
    "league/fractal": "^0.20.2",
    "phalcon/incubator-mailer": "^3.0.0",
    "vlucas/phpdotenv": "^5.6.2"
  },
  "suggest": {
    "ext-apcu": "*",
    "ext-bcmath": "*",
    "ext-gd": "*",
    "ext-imap": "*",
    "ext-redis": "*",
    "ext-simplexml": "*",
    "ext-sockets": "*",
    "ext-swoole": "*",
    "ext-zend-opcache": "*",
    "aws/aws-sdk-php": "^3.357.2",
    "cweagans/composer-patches": "^1.7.3",
    "fakerphp/faker": "^1.24.1",
    "friendsofphp/php-cs-fixer": "^3.89.1",
    "google/recaptcha": "^1.3.1",
    "jetbrains/phpstorm-attributes": "^1.2",
    "joshtronic/php-loremipsum": "^2.1.0",
    "league/csv": "^9.27.0",
    "league/oauth2-client": "^2.8.1",
    "league/oauth2-facebook": "^2.2.0",
    "league/oauth2-github": "^3.1.1",
    "league/oauth2-google": "^4.0.1",
    "league/oauth2-instagram": "^3.1.0",
    "league/oauth2-linkedin": "^5.1.2",
    "orhanerday/open-ai": "^5.3",
    "phalcon/ide-stubs": "^5.9.3",
    "php-imap/php-imap": "^5.0.1",
    "saggre/phpdocumentor-markdown": "^0.1.4",
    "shuchkin/simplexlsxgen": "^1.5.12",
    "spatie/array-to-xml": "^3.4.0",
    "thiagoalessio/tesseract_ocr": "^2.13",
    "xenolope/quahog": "^3.0.0"
  },
  "require-dev": {
    "ext-apcu": "*",
    "ext-bcmath": "*",
    "ext-gd": "*",
    "ext-imap": "*",
    "ext-redis": "*",
    "ext-simplexml": "*",
    "ext-sockets": "*",
    "ext-swoole": "*",
    "ext-zend-opcache": "*",
    "aws/aws-sdk-php": "^3.357.2",
    "cweagans/composer-patches": "^1.7.3",
    "fakerphp/faker": "^1.24.1",
    "google/recaptcha": "^1.3.1",
    "jetbrains/phpstorm-attributes": "^1.2",
    "joshtronic/php-loremipsum": "^2.1.0",
    "league/csv": "^9.27.0",
    "league/oauth2-client": "^2.8.1",
    "league/oauth2-facebook": "^2.2.0",
    "league/oauth2-github": "^3.1.1",
    "league/oauth2-google": "^4.0.1",
    "league/oauth2-instagram": "^3.1.0",
    "league/oauth2-linkedin": "^5.1.2",
    "orhanerday/open-ai": "^5.3",
    "phalcon/ide-stubs": "^5.9.3",
    "php-imap/php-imap": "^5.0.1",
    "saggre/phpdocumentor-markdown": "^1.0.0",
    "shuchkin/simplexlsxgen": "^1.5.12",
    "spatie/array-to-xml": "^3.4.0",
    "thiagoalessio/tesseract_ocr": "^2.13",
    "xenolope/quahog": "^3.0.0"
  },
  "autoload": {
    "psr-4": {
      "Zemit\\": "src/"
    },
    "files": [
      "src/Functions/Dump.php",
      "src/Functions/Array.php",
      "src/Functions/Sprintf.php",
      "src/Functions/Json.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Zemit\\Tests\\Unit\\": "tests/Unit"
    }
  },
  "extra": {
    "patches": {
      "phalcon/ide-stubs": {
        "Remove :mixed from EntityInterface": "patches/phalcon-entityinterface.patch"
      }
    }
  },
  "archive": {
    "exclude": [
      "/.github",
      "/.phalcon",
      "/.phpunit.cache",
      "/tests",
      "CHANGELOG.md",
      "codeception.yml",
      "phpcs.xml",
      "phpcs.xml.dist",
      "phpstan.neon",
      "phpstan.neon.dist",
      "phpunit.xml",
      "phpunit.xml.dist",
      "psalm.xml",
      "psalm.xml.dist"
    ]
  },
  "bin": [
    "zemit"
  ],
  "scripts": {
    "docker": "docker-compose up",
    "skeleton": "./bin/skeleton.sh validate ./",
    "phpunit": "./bin/phpunit.sh",
    "psalm": "./bin/psalm.sh",
    "php-cs-fixer": "./bin/php-cs-fixer.sh",
    "phpcs": "./bin/phpcs.sh",
    "phpcbf": "./bin/phpcbf.sh",
    "docs": "phpDocumentor -c phpdoc.xml"
  }
}
