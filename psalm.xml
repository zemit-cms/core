<psalm
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://getpsalm.org/schema/config"
        xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
        xmlns:xi="http://www.w3.org/2001/XInclude"
        phpVersion="8.4"
        errorLevel="2"
        resolveFromConfigFile="true"
        findUnusedBaselineEntry="false"
        findUnusedCode="false"
        hideExternalErrors="true"
        totallyTyped="true"
        allowStringToStandInForClass="true"
        autoloader="loader.php"
>
    <projectFiles>
        <directory name="src"/>
        <ignoreFiles>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <!-- Allow suppressions that are unused (local vs pipeline) -->
        <UnusedIssueHandlerSuppression errorLevel="suppress" />

        <!-- Framework base classes are intentionally extensible -->
        <ClassMustBeFinal errorLevel="suppress" />

        <!-- Over-strict and often noise -->
        <RiskyTruthyFalsyComparison errorLevel="suppress" />

        <!-- Phalcon Stubs are not read correctly -->
        <MethodSignatureMismatch errorLevel="suppress" />
        
        <!-- To not validate int range for json functions -->
        <ArgumentTypeCoercion>
            <errorLevel type="suppress">
                <referencedFunction name="json_encode" />
                <referencedFunction name="json_decode" />
            </errorLevel>
        </ArgumentTypeCoercion>

        <!-- False positive -->
        <InvalidArgument>
            <errorLevel type="suppress">
                <referencedFunction name="Redis::connect" />
            </errorLevel>
        </InvalidArgument>

        <!-- False positive -->
        <UndefinedClass>
            <errorLevel type="suppress">
                <referencedClass name="Swoole\Http\Request" />
                <referencedClass name="Swoole\Http\Response" />
                <referencedClass name="Swoole\WebSocket\Server" />
                <referencedClass name="Swoole\WebSocket\Frame" />
                <referencedClass name="Swoole\Coroutine" />
            </errorLevel>
        </UndefinedClass>
    </issueHandlers>
</psalm>
